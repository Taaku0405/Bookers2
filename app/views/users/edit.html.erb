<p id="notice"></p>
<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User info</h2>

<div class="container px-5 px-sm-0">
<% if @user.errors.any? %>
<h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
<ul>
<% @user.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
<% end %>

 <%= form_with model: @user do |f| %>
  <h6>Name</h6>
  <%= f.text_field :name %>
  <h6>image</h6>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <h6>Introduction</h6>
  <%= f.text_area :introduction %>
  <div class="form-group">
  <%= f.submit 'Update User',class: "btn btn-secondary data-disable-with=Update User" %>

  <% end %>